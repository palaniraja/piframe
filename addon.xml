<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon 
	id="screensaver.ngdrive.piframe"
	name="PiFrame - Screensaver"
	version="1.1"
	provider-name="https://www.github.com/palaniraja">
	<requires>
		<import addon="xbmc.python" version="2.25.0"/>
		<import addon="script.skin.helper.service" version="1.0.100"/>
	</requires>
	<extension point="xbmc.ui.screensaver" library="default.py"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Image Slideshow with additional info</summary>
        <description lang="en">Addon to show images from a directory, recent first, also watch for changes in the directory to reload the slideshow along with some data. Eg., EXIF date, CPU Temperature, Total no. of images and weather info</description>
		<platform>all</platform>
		<license>http://www.apache.org/licenses/LICENSE-2.0</license>
		<!-- <forum></forum> -->
		<source>https://github.com/palaniraja/piframe</source>
		<news>1.1 (2018-07-08) - Release
1.0 (2018-07-05) - Release
1.0 (2018-07-05) - started</news>
		<assets>
			<icon>resources/icon.png</icon>
			<fanart>resources/fanart.png</fanart>
			<screenshot>resources/screenshot-1.png</screenshot>
		</assets>
	</extension>
</addon>